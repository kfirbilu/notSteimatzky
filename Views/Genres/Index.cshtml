@model IEnumerable<BooksStore.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<!-- Banner Section Begin -->
<section class="banner-section set-bg" data-setbg="img/bluebanner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="banner__text">
                    <h2>Genres</h2>
                    <div class="banner__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Genres</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->

<div class="section">
    <div class="container branch_page_container">
        <div class="section-title">
            <div class='delete_form_container'>
                <a class="primary-btn cta-btn" asp-controller="Administrator" asp-action="ListUsers">Manage Users</a>
                <a class="primary-btn cta-btn" asp-controller="Administrator" asp-action="ListRoles">Manage Roles</a>
                <a class="primary-btn cta-btn" asp-controller="Genres" asp-action="Index">Manage Genres</a>
                <a class="primary-btn cta-btn" asp-controller="Books" asp-action="Index">Manage Books</a>
                <a class="primary-btn cta-btn" asp-controller="Branches" asp-action="Index">Manage Branches</a>
                <br /> <br /> <br /><a asp-controller="Home" asp-action="Index">Back Home</a>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreId"><i class="fa fa-edit"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GenreId"><i class="fa fa-search"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreId"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
