@{
    ViewData["Title"] = "Index";
}

<!-- Custom stlylesheet -->
<link rel="stylesheet" href="~/css/Statistics/Statistics.css">

<!-- Banner Section Begin -->
<section class="banner-section set-bg" data-setbg="img/bluebanner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="banner__text">
                    <h2>Statistics</h2>
                    <div class="banner__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Statistics</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->

<div class="section">
    <div class="container page_container">
        <div class="section-title">

            <h3 class="title"></h3>

            <div class="stats_container">

                <h4 class="title">Total income by Genre:</h4>
                <div class="graph" id="IncomeByGenreGraph"> </div>

                <h4 class="title">Total amount of items sold by book:</h4>
                <div class="graph" id="OrdersByBookGraph"> </div>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src='~/lib/jquery/dist/jquery.js'></script>
    <script src="~/lib/d3/d3.js"></script>
    <script src="~/js/Statistics/statistics.js"></script>
}
