@model Book

<div class="product">
    <div class="product-img">
        <img src="@Model.PictureName" alt="">
        <div class="product-label">
            <span class="new">NEW</span>
        </div>
    </div>

    <div class="product-body">
        <p class="product-category">@Model.Genre.GenreName</p>
        <h3 class="product-name">
            <a asp-controller="Products" asp-action="ViewProduct" asp-route-productid="@Model.BookId">
                @Model.BookName
            <i class="fa fa-info-circle"></i>
        </a>
    </h3>
    <h4 class="product-price">@Model.Price.ToString("c")</h4>
</div>
<div class="add-to-cart">
    <button id="addProduct" onclick="AddToCart(@Model.BookId)" value="Add to Cart" class="primary-btn-add-cart cta-btn">
        <i class="fa fa-shopping-cart"></i> Add to Cart
    </button>
</div>
</div>